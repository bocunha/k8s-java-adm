    pipeline {
        agent any

        stages {
            stage('Clone do Repositório Scripts') {
                steps {
                    git url: 'https://github.com/bocunha/k8s-java-adm.git', branch: 'main'
                }
            }
            stage('Executando do docker compose') {
                steps {
                    sh "./docker-compose.sh"
                }
            }
            stage('Realizando o deploy das aplicações no k8s') {
                steps {
                    sh "./deployjava.sh"
                }
            }
            stage('Testando se a aplicação esta no ar') {
                steps {
                    sh "./test.sh"
                }
            }
        }
    }